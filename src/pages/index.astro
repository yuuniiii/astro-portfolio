---
import BaseLayout from "../layouts/baselayout.astro";
import ProjectFolder from "../components/projectfolder.astro";
---

<BaseLayout title="Yuni Portfolio">
  <main class="mx-auto max-w-5xl px-6 py-14">
    <section class="rounded-2xl p-8">
		<h1 class="text-4xl text-neutral-300 font-semibold leading-[2]">
		  Hi, I’m Yuni
		</h1>

    <h2 class="text-4xl font-semibold leading-[1.5]">
		  I make complex concepts intuitive through design.
		</h2>
  
		<p class="ibm-plex-mono-regular text-lg mt-6 text-neutral-300 leading-[1.62]">
		  Product Designer @ 
      <span class="text-emerald-600 font-medium">FlashGrub</span> 
      <br> 
      Human-Computer Interaction student @
      <span class="text-sky-600 font-medium">Columbia University</span>
		</p>
	  </section>

    <section class="mt-32 relative space-y-[17vh]">
      <ProjectFolder
        tab="             "
        title="FlashGrub App"
        description="Iteratively designing an early-stage mobile food marketplace."
        imageSrc="/images/fgscreen.png"
        href="/flashgrub"
        meta="Figma · Ongoing"
        bgClass="bg-[#2a232e]"
        borderClass="border-[#5b4473]"
        style="z-index: 10"
      />

<!--       <ProjectFolder
        tab=" "
