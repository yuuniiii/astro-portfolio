  <body class="antialiased">
    <!-- header -->
    <header
     class="sticky top-0 z-50 w-full
         backdrop-blur"
>
     <div class="mx-auto max-w-5xl px-6 pt-6 pb-4">
    <div class="flex justify-between items-center">
      <a href="/" class="font-semibold">YC</a>

      <nav class="flex gap-14 text-lg">
        <a href="/yuni" class="hover:text-pink-500 transition">Introduction</a>
        <a href="/contact" class="hover:text-pink-500 transition">Contact</a>
        <a href="/Yuni_Chun_Resume_5 (4).pdf" target="_blank" rel="noopener noreferrer" class="hover:text-pink-500 transition">Resume</a>
