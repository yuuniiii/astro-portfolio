---
const { title, description, imageSrc, href, meta } = Astro.props;
---

<a
  href={href}
  class="group grid grid-cols-1 gap-6 sm:grid-cols-[2fr_3fr]"
>
  <!-- Image -->
  <div class="aspect-[4/3] overflow-hidden rounded-xl bg-neutral-100">
    <img
      src={imageSrc}
      alt={title}
      class="h-full w-full object-cover"
    />
  </div>

  <!-- Text -->
  <div class="flex flex-col justify-center">
    <h3 class="text-xl font-semibold">{title}</h3>

    <p class="mt-3 max-w-md text-neutral-600 leading-relaxed">
      {description}
    </p>

    {meta && (
      <span class="mt-4 text-sm text-neutral-500">
        {meta}
      </span>
    )}
  </div>
</a>
